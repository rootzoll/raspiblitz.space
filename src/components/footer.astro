---
import { Icon } from "astro-icon";

const links = [
  {
    url: "/",
    description: "Home",
    icon: "carbon:home",
  },
  {
    url: "https://github.com/rootzoll/raspiblitz/",
    description: "RaspiBlitz on GitHub",
    icon: "carbon:logo-github",
  },
  {
    url: "https://t.me/raspiblitz",
    description: "RaspiBlitz on Telegram",
    icon: "carbon:chat",
  },
  {
    url: "https://twitter.com/RaspiBlitz",
    description: "RaspiBlitz on Twitter",
    icon: "carbon:logo-twitter",
  },
];
---

<footer>
  <div class="relative flex items-center justify-center h-64">
    <div class="absolute inset-0 overflow-hidden opacity-40">
    </div>
    <ul class="relative grid grid-cols-2 gap-4 sm:grid-cols-4">
      {
        links.map((link) => (
          <li>
            <a
              class="flex items-center justify-center w-16 h-16 p-4 border-2 border-current rounded-full"
              href={link.url}
            >
              <span class="sr-only">{link.description}</span>
              <Icon class="h-full" name={link.icon} />
            </a>
          </li>
        ))
      }
    </ul>
  </div>
  <p class="text-sm p-8 font-mono text-center">
    <a href="https://github.com/tinyfog/raspiblitz.space">Website source code</a>&nbsp;on Github and the website is made by&nbsp;<a href="https://twitter.com/tinyfog97d">tinyfog97d</a>
  </p>
</footer>
